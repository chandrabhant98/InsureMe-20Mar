pipeline {
    agent any

    tools {
        maven 'M2_HOME'
    }

    environment {
        IMAGE_NAME = "chandrabhant98/insureme04:1.0"
    }

    stages {
        stage('CheckOut') {
            steps {
                echo 'Checkout the source code from GitHub'
                git branch: 'main', url: 'https://github.com/chandrabhant98/InsureMe-20Mar.git'
            }
        }
        stage ('Package') {
          steps {
            echo 'Create a Package'
            sh 'mvn clean package'
                  }
              }
        }
}
